								@media mobile
									font-size 25px
								@media compu
									font-size 40px

						strong

							line-height 1
							@media mobile
								font-size 11px
							@media compu
								font-size 40px
						span

							text-transform uppercase
							background-color white
							color verde
							padding 5px 20px
							margin 5px 0
							border-radius 50px
							@media mobile
								font-size 11px
							@media compu
