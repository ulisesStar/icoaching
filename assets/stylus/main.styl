						.izquierda
							border-radius 50px 0 0 50px
							background-color white
							flex-grow 2
						.derecha
							border-radius 0 50px 50px 0
							background-color rgba(255, 255, 255, .5)
							flex-grow 1
							overflow hidden
							md-progress-linear
								height 100%
								.md-container
									height 100%
									&>div
										height 100%
									.md-bar
										opacity .5
				.botones
					display flex
					justify-content center
					align-items center
					flex-direction column
					.md-button
