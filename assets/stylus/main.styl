									span
										color white

					md-nav-ink-bar
						height 100%
						z-index 1
						background verde
						border-radius 50px
						transition(300ms, 0)


		md-grid-list
			md-grid-tile
				&.ng-enter
					animation(fadeInUp)
				&.ng-leave
					animation(fadeOutDown)
				md-card
					slider
						height calc(100% - 55px)
						display flex
						justify-content center
						align-items center
						.slider-container
							width 100%
							height 100%
							position relative
							.slider
								position initial
								.slick-dots
									padding 0px
									bottom 0px
									li button:before
										content none
								.slick-slide
									height 100%
									width 100%
									imagen, .imagen
										width 100%
										height 100%
										background-size cover
										background-position center


					md-card-title
						padding 10px
						font-size 15px
						line-height 15px

