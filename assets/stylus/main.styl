					height 500px
					max-width 100%
				@media compu
					margin-top -200px
				.modalidad
					padding 10px
					cursor pointer
					max-width 400px
					&.conHover
						transform scale(.90)
						transition(200ms, 0)
					.titulo-container
						display flex
						align-items center
						.imagen
							height 30px
							width 30px
							background-color white
							padding 5px
							border-radius 50px
							display flex
							justify-content center
							align-items center
							margin 0 10px
							img
								height 20px
								width auto
						.titulo

							letter-spacing -1px
							font-weight bold
							color verde
							@media mobile
								font-size 20px
							@media compu
								font-size 25px
					.descripcion

						text-align justify
						@media mobile
							padding 10px
						@media compu
							padding 20px
						p
							@media mobile
								font-size 11px
							@media compu
								font-size 25px

		&.leadership, &.bilateral
			height 80vh
			overflow hidden
			position relative
			.content
				height 100%
				display flex
				@media mobile
					flex-direction column
				.imagen
					flex 1
					display flex
					justify-content center
					align-items center
					background-repeat no-repeat
					@media mobile
						order 1
						background-image none !important
					.titulo
						font-family Futura
						font-weight 800
						color white
						font-size 8vw
						line-height 8vw
				.descripcion-content
					position relative
					flex 1
					display flex
					justify-content center
					align-items center
					flex-direction column
					@media mobile
						order 2
						flex 4
					.descripcion
						max-width 70%
						color white
						@media mobile
							font-size 14px
					.md-button
						background-color inherit
						border 1px solid white
						border-radius 60px
						height 60px
						padding 0 30px
						span
							color white
							line-height 60px
		&.leadership
			// background-color verdeObscuro
			.imagen
				background-position left bottom
			.content
				background-color verde
		&.bilateral
			// background-color rosaObscuro
			.imagen
				background-position right bottom
			.content
				background-color rosa

		&.formulario
			height 100vh
			h2
				font-family Futura

				margin 0px
				@media mobile
					font-size 7vw
					line-height 7.5vw
				@media compu
					font-size 4.5vw
					line-height 5vw
			h4
				font-family Futura
				color verde
				margin 0px
				@media mobile
					font-size 4vw
					line-height 4vw
				@media compu
					font-size 3vw
					line-height 3vw
			.formulario-content
				@media mobile
					max-width 95%
				form
					width 100%
					&>div
						@media mobile
							flex-direction column
							md-input-container
								margin 0px
					.md-button
						background-color verde
						border-radius 50px
						padding 0 30px
						height 60px
						margin 0px
						span
							color white
						md-icon
							color white


.servicios
	margin-top 100px
	.servicios-content
		min-height 100vh
		@media mobile
			max-width 95%
		.filtros
			margin 30px 0

			display flex
			justify-content space-around

			@media mobile
				flex-direction column
				height 200px
			@media compu
				flex-direction row
				height 40px
			.clear
				margin 0px
				background gris
				min-width 40px
				border-radius 40px
				md-icon
					color white
			&>md-nav-bar
				background-color gris
				border-radius 50px
				.md-nav-bar
					height 40px
					border inherit
					nav
						position relative
						z-index 2
					._md-nav-bar-list
						@media mobile
							justify-content space-around
						.md-nav-item
							font-size 11px
							margin 0px 10px
							border-radius 0px
							&:first-child
								margin-left 0px
								border-radius 50px 0 0 50px
							&:last-child
								border-radius 0 50px 50px 0
								margin-right 0px
