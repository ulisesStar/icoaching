					content ''
					left -200px
					display block
					position relative
					z-index 1
		&.intro-container
			background-color verde
			height 300px
			.intro
				display flex
				.imagen
					position relative
					flex 1
					md-icon
						height 300px
						width auto
						position absolute
						right 0px
				.descripcion
					height 200px
					flex 1
					display flex
					flex-direction column
					justify-content center
					@media mobile
