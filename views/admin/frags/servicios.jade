.servicios
	md-card
		md-list
			div(layout="row" layout-align="space-between center")
				.md-padding
					h4 Servicios
				md-button(ng-click="ctrl.crear()")
					md-icon add
			md-divider
			md-table-container
				table(md-table md-row-select multiple)
					thead(md-head)
						tr(md-row)
							th(md-column md-numeric md-order-by="proceso.createdAt") Nombre
							th(md-column) Tipo
							th(md-column) Area
							th(md-column) Modalidad
					tbody(md-body)
						tr(md-row md-select="dato" md-select-id="name" md-auto-select ng-repeat="servicio in ctrl.servicios" ui-sref="servicio({id : servicio.id})")
							td(md-cell) {{servicio.nombre}}
							td(md-cell) {{servicio.Tipo.nombre}}
							td(md-cell) {{servicio.Area.nombre}}
							td(md-cell) {{servicio.Modalidad.nombre}}
